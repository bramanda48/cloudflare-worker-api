{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext"],
    "resolveJsonModule": true,
    "types": ["@cloudflare/workers-types"],
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "removeComments": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "@src/*": ["./src/*"],
      "@tests/*": ["./tests/*"]
    }
  },
  "ts-node": {
    "transpileOnly": true
  },
  "include": ["./src/**/*", "./tests/**/*", "bindings.d.ts"]
}
